<h2 class="text-center mt-2"><%= t("link_device.edit_password") %></h2>

<div class="row">
  <div class="col-4 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false },
      html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= render "devise/shared/error_messages", resource: resource %>

       <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-file-lock"></i></span>
        <%= f.password_field :password, class: "form-control", placeholder: t("link_device.password"),
          autocomplete: "new-password" %>
      </div>

      <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-file-lock"></i></span>
        <%= f.password_field :password_confirmation, class: "form-control",
          placeholder: t("link_device.password again"), autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit t("link_device.edit_password"), class: "btn btn-primary" %>
        <%= render "devise/shared/links" %> 
      </div>

    <% end %>
  </div> 
</div>
