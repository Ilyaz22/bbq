<h2 class="text-center mt-2">Регистрация пользователя</h2>

<div class="row">
  <div class="col-4 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      data: { turbo: false }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
        <%= f.email_field :email, class: "form-control", placeholder: "Email",
          autofocus: true, autocomplete: "email" %>
      </div>

       <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-file-lock"></i></span>
        <%= f.password_field :password, class: "form-control", placeholder: "Пароль",
          autocomplete: "new-password" %>
      </div>

      <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-file-lock"></i></span>
        <%= f.password_field :password_confirmation, class: "form-control",
          placeholder: "Введите пароль еще раз", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %> или
        <%= render "devise/shared/links" %> 
      </div>

    <% end %>
  </div> 
</div>
