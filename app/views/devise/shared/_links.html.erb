<%- if devise_mapping.omniauthable? %>
  <%= button_to "#{t("link_device.login_omniauth")} Github",user_github_omniauth_authorize_path,
    method: :post, data: { turbo: false },
    class: "btn btn-dark mb-2" %>
  <%= button_to "#{t("link_device.login_omniauth")} Vk", user_vkontakte_omniauth_authorize_path,
    method: :post, data: { turbo: false },
    class: "btn btn-dark mb-2" %>
<% end %>

<%- if controller_name != 'sessions' %>
  <p class="my-1"><%= link_to t("link_device.log_in"), new_session_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="my-1"><%= link_to t("link_device.sign_in"), new_registration_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="my-1"><%= link_to t("link_device.forgot_password"), new_password_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="my-1"><%= link_to t("link_device.no_instructions"), new_confirmation_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="my-1"><%= link_to t("link_device.no_unlock_instructions"), new_unlock_path(resource_name) %></p>
<% end %>
