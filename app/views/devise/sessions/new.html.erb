<h2 class="text-center mt-2"><%= t("link_device.login") %></h2>

<div class="row">
  <div class="col-4 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
      data: { turbo: false}) do |f| %>

      <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
        <%= f.email_field :email, class: "form-control", placeholder: "Email",
          autofocus: true, autocomplete: "email" %>
      </div>

       <div class="input-group my-3">
        <span class="input-group-text"><i class="bi bi-file-lock"></i></span>
        <%= f.password_field :password, class: "form-control", placeholder: t("link_device.password"),
          autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-2">
        <%= f.submit t("link_device.log_in"), class: 'btn btn-primary' %> <%= t("link_device.or") %> 
        <%= link_to t("link_device.return"), :back, class: 'text-decoration-none' %>
        <%= render "devise/shared/links" %>
      </div>

    <% end %>
  </div> 
</div>
