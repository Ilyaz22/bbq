<a href="<%= photo.photo.url %>" data-gallery="example-gallery" data-toggle="lightbox" class="photo-icon "
   data-caption='<%= t("views.added") %> <%= render partial: "users/user", object: photo.user %>
     <% if current_user_can_edit?(photo) %>
       <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, event_photo_path(photo.event, photo),
                   data: { turbo_method: :delete, turbo_confirm: t("views.delete") } %>
     <% end %>'>
  <img src="<%= photo.photo.thumb.url %>">
</a>
